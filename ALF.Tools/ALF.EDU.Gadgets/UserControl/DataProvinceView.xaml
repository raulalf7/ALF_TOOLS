<UserControl x:Class="ALF.EDU.Gadgets.UserControl.DataProvinceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:titleControl="clr-namespace:ALF.UI.TitleControl;assembly=ALF.UI"
             Background="White"
             Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="120"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <WrapPanel Grid.Row="0">
            <titleControl:Text Title="服务器链接" x:Name="ipText" Value=".\sqlexpress"/>
            <titleControl:Text Title="服务器密码" x:Name="pwText" Value="abc123,"/>
            <Button Width="290" Height="30" Margin="5" Content="刷新" Click="ButtonRefresh_OnClick"/>
            <titleControl:Combo Title="分类" x:Name="typeCombo" Items="全部,基础教育,中等职业教育,高等教育" SelectedIndex="0" SelectionChanged="TypeCombo_OnSelectionChanged"/>
            <Button Width="290" Height="30" Margin="5" Content="生成所选综表分省过录" Click="ButtonBase_OnClick"/>
            <Button Width="290" Height="30" Margin="5" Content="返回" Click="QuitButton_OnClick"/>
        </WrapPanel>
        <DataGrid Grid.Row="1" Margin="5" x:Name="dataGrid" DisplayMemberPath="templateName" SelectionMode="Extended"/>
        <TextBox Grid.Row="2" Margin="5" IsReadOnly="True" x:Name="infoText"/>

    </Grid>
</UserControl>
