<Window x:Class="ALF.EDU.Gadgets.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        ResizeMode="NoResize"
        Width="600"
        Title="ALF.Edu.Gadgets v1.4" >
    <Grid>
        <Grid.Resources>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="功能选择" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="30"/>
        <WrapPanel Grid.Row="1">
            <Button Width="190" Margin="5" Height="30" Content="补充县基表实例和数据" Click="ButtonBase_OnClick"/>
            <Button Width="190" Margin="5" Height="30" Content="分省过录" Click="ButtonBase_OnClick"/>
        </WrapPanel>
        <ContentControl Visibility="Collapsed" Grid.Row="0" Grid.RowSpan="2" x:Name="mainContent"/>
    </Grid>
    
</Window>
